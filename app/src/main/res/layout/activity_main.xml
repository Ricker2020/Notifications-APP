<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/tarea"
        layout="@layout/header"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_view_seccions"
        android:layout_width="387dp"
        android:layout_height="541dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_seccion"
        app:layout_constraintVertical_bias="0.134" />

    <ImageView
        android:id="@+id/iv_add_seccion"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tarea"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="@+id/tarea"
        app:layout_constraintTop_toBottomOf="@+id/tarea"
        app:srcCompat="@drawable/add" />

</androidx.constraintlayout.widget.ConstraintLayout>